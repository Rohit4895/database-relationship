<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/idTitleDev"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Id: "
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <TextView
        android:id="@+id/nameTitleDev"
        android:layout_below="@+id/idTitleDev"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <TextView
        android:id="@+id/addTitleDev"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameTitleDev"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Address:"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/mobTitleDev"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addTitleDev"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Mobile:"
        android:textSize="20dp"/>
    <View
        android:id="@+id/partitionLine"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/mobTitleDev"
        android:text=""
        android:background="@color/colorPrimary"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="2dp"/>

</RelativeLayout>